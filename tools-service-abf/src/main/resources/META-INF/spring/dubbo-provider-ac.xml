<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context.xsd
		http://code.alibabatech.com/schema/dubbo 
		http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

	<!-- ============================================================= -->
	<!-- dubbo service info 非dubbo:annotation方式暴露服务时在此定义(推荐)   -->
	<!-- 最佳实践：                                                      -->
	<!-- 1、尽可能多的定义provider配置信息；                                 -->
	<!-- 2、可按找功能分多个配置文件，dubbo启动时会自动扫描加载；                -->
	<!-- ============================================================= -->
	<!-- 暴露服务 -->
	<!-- 服务提供者：柜员操作日志(JNL_TELLER_TRACE) 基本远程服务 -->
    <!-- 权限业务服务 -->
    <dubbo:service 
		interface="org.tis.tools.rservice.ac.capable.IApplicationRService" group="ac" version="${IOrgRService.version}"
		ref="applicationRServiceImpl" 
		protocol="dubbo"  timeout="3000" />
 	
    <bean id="applicationRServiceImpl" class="org.tis.tools.rservice.ac.capable.ApplicationRServiceImpl" />
  
  
       <!-- 应用 基础服务-->
    <dubbo:service 
		interface="org.tis.tools.rservice.ac.basic.IAcAppRService" group="ac" version="${IOrgRService.version}"
		ref="acAppRServiceImpl" 
		protocol="dubbo"  timeout="3000" />
 	
    <bean id="acAppRServiceImpl" class="org.tis.tools.rservice.ac.basic.AcAppRServiceImpl" />
  
   <!-- 功能基础服务 -->
      <dubbo:service 
		interface="org.tis.tools.rservice.ac.basic.IAcFuncRService" group="ac" version="${IOrgRService.version}"
		ref="acFuncRServiceImpl" 
		protocol="dubbo"  timeout="3000" />
 	
    <bean id="acFuncRServiceImpl" class="org.tis.tools.rservice.ac.basic.AcFuncRServiceImpl" />
  
  <!-- 功能 组基础服务-->
  <dubbo:service 
		interface="org.tis.tools.rservice.ac.basic.IAcFuncgroupRService" group="ac" version="${IOrgRService.version}"
		ref="acFuncgroupRServiceImpl" 
		protocol="dubbo"  timeout="3000" />
 	
    <bean id="acFuncgroupRServiceImpl" class="org.tis.tools.rservice.ac.basic.AcFuncgroupRServiceImpl" />
  
  
   <!-- 菜单基础服务-->
  <dubbo:service 
		interface="org.tis.tools.rservice.ac.basic.IAcMenuRService" group="ac" version="${IOrgRService.version}"
		ref="acMenuRServiceImpl" 
		protocol="dubbo"  timeout="3000" />
 	
    <bean id="acMenuRServiceImpl" class="org.tis.tools.rservice.ac.basic.AcMenuRServiceImpl" />
  
  
  
</beans>